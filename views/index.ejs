<!DOCTYPE html>
<html lang=en>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, inital-scale=1">
        <title>Thing</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>
        <script>
          $(document).ready(function(){
            $("#add").click(function(){
              var name = document.getElementById("name").value;
              var capital = document.getElementById("cap").value;
              var leader = document.getElementById("lead").value;
              $.post("/add", {name: name, capital: capital, leader: leader}, function(data){
                console.log(data);
              });
            });
          });
        </script>
    </head>
    <body>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Capital</th>
                    <th scope="col">Leader</th>
                  </tr>
                </thead>
                <tbody>
                    <%regions.forEach((region,i) => {%>
                    <tr>
                        <th scope="row"><%= i + 1%></th>
                        <td><%= region.name%></td>
                        <td><%= region.capital%></td>
                        <td><%= region.leader%></td>
                    </tr>
                    <%})%>
                </tbody>
                <tfoot>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">
                      <label for="name">Name:</label>
                      <input type="text" id="name" name="name"><br><br>
                    </th>
                    <th scope="col">
                      <label for="cap">Capital:</label>
                      <input type="text" id="cap" name="cap"><br><br>
                    </th>
                    <th scope="col">
                      <label for="lead">Leader:</label>
                      <input type="text" id="lead" name="lead"><br><br>
                    </th>
                  </tr>
                </tfoot>
              </table>
              <button type="submit" id="add">Add Region</button>
    </body>
</html>